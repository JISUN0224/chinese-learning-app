.progress-indicator {
  margin: 10px 0;
}

.progress-text {
  display: flex;
  justify-content: center;
  margin-bottom: 5px;
  font-size: 14px;
  color: #666;
}

.current {
  font-weight: bold;
  color: #4a90e2;
}

.progress-bar {
  height: 6px;
  background-color: #f0f0f0;
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4a90e2;
  border-radius: 3px;
  transition: width 0.3s ease-in-out;
}