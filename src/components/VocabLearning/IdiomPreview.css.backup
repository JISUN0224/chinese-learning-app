/* 성어 미리보기 스타일 */
.idiom-preview {
  background-color: #f9f9f9;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
}

.idiom-preview h3 {
  margin-top: 0;
  color: #333;
  font-size: 20px;
}

.idiom-list {
  margin: 20px 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 15px;
}

.idiom-item {
  background-color: white;
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 15px;
  transition: transform 0.2s, box-shadow 0.2s;
}

.idiom-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.idiom-chinese {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333;
}

.idiom-pinyin {
  font-size: 16px;
  color: #4a90e2;
  margin-bottom: 10px;
}

.idiom-meaning {
  font-size: 14px;
  color: #666;
}

.preview-actions {
  text-align: center;
  margin-top: 20px;
}

.preview-actions p {
  margin-bottom: 10px;
  color: #666;
}

.start-learning-button {
  padding: 12px 25px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.2s;
}

.start-learning-button:hover {
  background-color: #388E3C;
}

.idiom-preview-empty {
  text-align: center;
  padding: 40px;
  background-color: #f9f9f9;
  border-radius: 10px;
  color: #666;
}