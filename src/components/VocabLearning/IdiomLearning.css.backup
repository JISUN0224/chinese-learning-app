/* 성어 학습 뷰 스타일 */
.idiom-learning-view {
  max-width: 1000px;
  margin: 0 auto;
  padding: 10px;
}

.learning-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.back-button {
  padding: 8px 15px;
  background-color: #4a90e2;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  margin-right: 15px;
}

.learning-info {
  flex: 1;
}

.learning-info h2 {
  margin: 0 0 5px 0;
  font-size: 24px;
  color: #333;
}

.learning-info p {
  margin: 0;
  color: #666;
}

/* 카테고리 목록 스타일 */
.category-list {
  margin: 20px 0;
}

.category-list h3 {
  font-size: 20px;
  color: #333;
  margin-bottom: 15px;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
}

.category-card {
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 15px;
  transition: transform 0.2s, box-shadow 0.2s;
  cursor: pointer;
}

.category-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.category-card h4 {
  margin: 0 0 10px 0;
  font-size: 18px;
  color: #4a90e2;
}

.category-card p {
  margin: 0 0 10px 0;
  color: #666;
  font-size: 14px;
}

.category-card .word-count {
  display: inline-block;
  background-color: #4a90e2;
  color: white;
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 12px;
}

/* 배치 완료 스타일 */
.batch-complete {
  text-align: center;
  margin: 40px 0;
  padding: 30px;
  background-color: #f5f5f5;
  border-radius: 10px;
}

.batch-complete h3 {
  margin-top: 0;
  color: #4CAF50;
  font-size: 24px;
}

.action-buttons {
  margin-top: 20px;
  display: flex;
  justify-content: center;
  gap: 20px;
}

.next-batch-button {
  padding: 12px 20px;
  background-color: #4a90e2;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.2s;
}

.next-batch-button:hover {
  background-color: #357abd;
}

/* 로딩 및 오류 메시지 */
.loading, .error {
  text-align: center;
  margin-top: 40px;
  padding: 20px;
}

.error {
  color: #f44336;
  background-color: #ffebee;
  border-radius: 5px;
}